<h2>Queues</h2>
<h3>Overview</h3>

<div class="row">
  <div class="no-padding">
    <ul class="list-group">
      {{#each queues}}
        <li class="list-group-item">
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}">{{ this.hostId }}/{{ this.name }}</a>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

<h3>Statistics</h3>
<div class="row">
  <div class="col-sm-4 no-padding">
    <table class="table">
        {{#each info.statistics}}
        <tr>
          <th>{{ @key }}</th>
          <th>{{ this }}</th>
        </tr>
        {{/each}}
    </table>
  </div>
</div>

{{#contentFor 'sidebar'}}
  <li class="active"><a href="#">Queues Overview</a></li>
{{/contentFor}}
